import Config

consensus = <%= @consensus %>

config :cloister,
  otp_app: :<%= @application %>,
  # listener: <%= inspect(@listener) %>,
  consensus: consensus,
  loopback?: <%= @ip == "127.0.0.1" %>,
  additional_modules: [],
  sentry: Enum.map(0..consensus, &:"<%= @application %>_#{&1}@<%= @ip %>")

